# Maintainer: Sam Breese <sbreese[at]xitol[dot]net>
pkgname=shade
pkgver=0.01
pkgrel=1
pkgdesc="Shade is a compiled programming language based on C, Go, and Haskell"
url="https://github.com/chameco/Shade"
arch=('i686')
license=('MIT')
depends=()
optdepends=()
makedepends=('flex' 'bison')
conflicts=()
replaces=()
backup=()
source=('http://dl.dropbox.com/u/43792191/${pkgname}-${pkgver}.tar.gz')
md5sums=('041b2efd9dce44d6e829fd719eb6b5a8')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
